{
    "$schema": "https://turborepo.dev/schema.json",
    "globalEnv": [
        "NODE_ENV",
        "APP_PORT",
        "PORT"
    ],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", "build/**"]
        },
        "dev": {
            "dependsOn": ["^dev"],
            "persistent": true,
            "cache": true
        },
        "start": {
            "dependsOn": ["build"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        }
    }
}
