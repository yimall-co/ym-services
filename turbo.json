{
    "$schema": "https://turborepo.dev/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "dev": {
            "dependsOn": ["^dev"],
            "persistent": true,
            "cache": true
        },
        "start": {
            "dependsOn": ["build"]
        }
    }
}
