{
    "compilerOptions": {
        "outDir": "build",
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "noEmit": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "strictPropertyInitialization": false,
        "module": "commonjs",
        "target": "es2023",
        "rootDir": "src",
        "lib": [
            "es2023",
            "dom"
        ],
        "paths": {
            "lib/*": [
                "./src/lib/*"
            ],
            "bm/*": [
                "./src/contexts/bm/*"
            ],
            "cm/*": [
                "./src/contexts/cm/*"
            ],
            "iam/*": [
                "./src/contexts/iam/*"
            ],
            "lm/*": [
                "./src/contexts/lm/*"
            ],
            "shared/*": [
                "./src/contexts/shared/*"
            ],
            "sm/*": [
                "./src/contexts/sm/*"
            ],
            "vm/*": [
                "./src/contexts/vm/*"
            ],
            "wm/*": [
                "./src/contexts/wm/*"
            ],
            "presentation/*": [
                "./src/presentation/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}