{
    "name": "yimall-service",
    "version": "0.1.0",
    "description": "yiMall API",
    "engines": {
        "node": ">=22.0.0"
    },
    "scripts": {
        "build": "tsc && copy-cli \"src/**/*.html\" build",
        "build:w": "tsc -w",
        "build:original": "npx foal rmdir build && tsc -p tsconfig.app.json",
        "start": "node ./build/index.js",
        "start:w": "supervisor -w ./build --no-restart-on error ./build/index.js",
        "dev:test": "npm run build && concurrently -r \"npm run build:w\" \"npm run start:w\"",
        "dev:fastify": "tsx --env-file=.env.local ./src/server.ts"
    },
    "dependencies": {
        "@foal/core": "catalog:foalts",
        "pg": "catalog:",
        "zod": "catalog:",
        "dotenv": "catalog:",
        "fastify": "catalog:",
        "tsyringe": "catalog:",
        "drizzle-orm": "catalog:",
        "reflect-metadata": "catalog:",
        "source-map-support": "catalog:"
    },
    "devDependencies": {
        "@foal/cli": "catalog:foalts",
        "@types/pg": "catalog:types",
        "@types/node": "catalog:types",
        "@types/mocha": "catalog:types",
        "concurrently": "catalog:",
        "supertest": "catalog:",
        "supervisor": "catalog:",
        "eslint": "catalog:",
        "copy": "catalog:",
        "@typescript-eslint/eslint-plugin": "catalog:eslint",
        "@typescript-eslint/parser": "catalog:eslint",
        "drizzle-kit": "catalog:",
        "typescript": "catalog:"
    }
}
