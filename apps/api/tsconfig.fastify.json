{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "moduleResolution": "node",
        "strict": true,
        "noEmit": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowImportingTsExtensions": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "dist",
        "rootDir": "src",
        "useDefineForClassFields": false,
        "types": [
            "node"
        ],
        "paths": {
            "lib/*": [
                "./src/lib/*"
            ],
            "bm/*": [
                "./src/contexts/bm/*"
            ],
            "cm/*": [
                "./src/contexts/cm/*"
            ],
            "iam/*": [
                "./src/contexts/iam/*"
            ],
            "lm/*": [
                "./src/contexts/lm/*"
            ],
            "shared/*": [
                "./src/contexts/shared/*"
            ],
            "sm/*": [
                "./src/contexts/sm/*"
            ],
            "vm/*": [
                "./src/contexts/vm/*"
            ],
            "wm/*": [
                "./src/contexts/wm/*"
            ],
            "presentation/*": [
                "./src/presentation/*"
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}